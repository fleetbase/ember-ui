{{! Card Grid Layout Component }}
<div class="card-grid-container" ...attributes>
    {{#if this.hasModels}}
        <div class={{this.containerClass}}>
            {{#each this.models as |model index|}}
                {{yield (hash card=(component "layout/resource/card" model=model index=index class=this.cardClass))}}
            {{/each}}
        </div>

        {{#if this.showPagination}}
            <div class="flex items-center justify-between border-t border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 px-4 py-3 sm:px-6 mt-6">
                <div class="flex flex-1 justify-between sm:hidden">
                    <Button @text="Previous" @size="sm" @disabled={{eq this.currentPage 1}} @onClick={{this.previousPage}} />
                    <Button @text="Next" @size="sm" @disabled={{eq this.currentPage this.totalPages}} @onClick={{this.nextPage}} />
                </div>

                <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
                    <div>
                        <p class="text-sm text-gray-700 dark:text-gray-300">
                            Showing
                            <span class="font-medium">{{this.paginationInfo.start}}</span>
                            to
                            <span class="font-medium">{{this.paginationInfo.end}}</span>
                            of
                            <span class="font-medium">{{this.paginationInfo.total}}</span>
                            results
                        </p>
                    </div>

                    <div>
                        <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
                            <button
                                type="button"
                                class="relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 focus:z-20 focus:outline-offset-0 disabled:opacity-50 disabled:cursor-not-allowed"
                                disabled={{eq this.currentPage 1}}
                                {{on "click" this.previousPage}}
                            >
                                <span class="sr-only">Previous</span>
                                <FaIcon @icon="chevron-left" class="h-4 w-4" />
                            </button>

                            {{#each this.pageNumbers as |page|}}
                                {{#if (eq page "...")}}
                                    <span class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-700 dark:text-gray-300 ring-1 ring-inset ring-gray-300">
                                        ...
                                    </span>
                                {{else}}
                                    <button
                                        type="button"
                                        class="relative inline-flex items-center px-4 py-2 text-sm font-semibold
                                            {{if
                                                (eq page this.currentPage)
                                                'z-10 bg-blue-600 text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600'
                                                'text-gray-900 dark:text-gray-100 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 focus:z-20 focus:outline-offset-0'
                                            }}"
                                        {{on "click" (fn this.goToPage page)}}
                                    >
                                        {{page}}
                                    </button>
                                {{/if}}
                            {{/each}}

                            <button
                                type="button"
                                class="relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 focus:z-20 focus:outline-offset-0 disabled:opacity-50 disabled:cursor-not-allowed"
                                disabled={{eq this.currentPage this.totalPages}}
                                {{on "click" this.nextPage}}
                            >
                                <span class="sr-only">Next</span>
                                <FaIcon @icon="chevron-right" class="h-4 w-4" />
                            </button>
                        </nav>
                    </div>
                </div>
            </div>
        {{/if}}
    {{else}}
        <div class="text-center py-12">
            <FaIcon @icon="inbox" class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-600" />
            <h3 class="mt-2 text-sm font-semibold text-gray-900 dark:text-white">No items</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                {{or @emptyStateText "No items to display"}}
            </p>
            {{#if @onCreateNew}}
                <div class="mt-6">
                    <Button @text={{or @createButtonText "Create New"}} @icon="plus" @type="primary" @onClick={{@onCreateNew}} />
                </div>
            {{/if}}
        </div>
    {{/if}}
</div>