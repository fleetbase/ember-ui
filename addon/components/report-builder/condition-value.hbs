{{#if this.isDate}}
    <DatePicker @value={{@value}} @dateFormat="yyyy-MM-dd" @onChange={{this.change}} class="form-input form-input-sm w-40" />
{{else if this.isDateTime}}
    <DatePicker @value={{@value}} @dateFormat="yyyy-MM-dd HH:mm:ss" @onChange={{this.change}} class="form-input form-input-sm w-52" />
{{else if this.isNumber}}
    <Input @value={{@value}} @type="number" class="form-input form-input-sm w-32" {{on "input" (fn this.change (pick "target.value"))}} />
{{else if this.isJSON}}
    <Textarea @value={{@value}} rows="2" class="form-input form-input-sm w-56" {{on "input" (fn this.change (pick "target.value"))}} />
{{else}}
    <Input @value={{@value}} @type="text" class="form-input form-input-sm flex-1" {{on "input" (fn this.change (pick "target.value"))}} />
{{/if}}