<div class="kanban-board-footer">
    <div class="board-footer-content">
        {{! Main statistics }}
        <div class="board-stats">
            <div class="stats-section">
                <div class="stat-item">
                    <span class="stat-label">Cards:</span>
                    <span class="stat-value">{{this.boardStats.totalCards}}</span>
                </div>
                
                <div class="stat-item">
                    <span class="stat-label">Columns:</span>
                    <span class="stat-value">{{this.boardStats.columnCount}}</span>
                </div>
                
                {{#if (gt this.boardStats.selectedCount 0)}}
                    <div class="stat-item selected">
                        <span class="stat-label">Selected:</span>
                        <span class="stat-value">{{this.boardStats.selectedCount}}</span>
                    </div>
                {{/if}}
                
                {{#if (gt this.boardStats.columnCount 0)}}
                    <div class="stat-item">
                        <span class="stat-label">Avg per column:</span>
                        <span class="stat-value">{{this.boardStats.averageCardsPerColumn}}</span>
                    </div>
                {{/if}}
            </div>

            {{! Priority distribution }}
            {{#if (gt this.boardStats.totalCards 0)}}
                <div class="stats-section priority-stats">
                    <span class="stats-section-label">Priority:</span>
                    <div class="priority-distribution">
                        {{#if this.boardStats.priorityStats.high}}
                            <div class="priority-stat high">
                                <FaIcon @icon="exclamation" @prefix="fas" />
                                <span>{{this.boardStats.priorityStats.high}}</span>
                            </div>
                        {{/if}}
                        {{#if this.boardStats.priorityStats.medium}}
                            <div class="priority-stat medium">
                                <FaIcon @icon="minus" @prefix="fas" />
                                <span>{{this.boardStats.priorityStats.medium}}</span>
                            </div>
                        {{/if}}
                        {{#if this.boardStats.priorityStats.low}}
                            <div class="priority-stat low">
                                <FaIcon @icon="arrow-down" @prefix="fas" />
                                <span>{{this.boardStats.priorityStats.low}}</span>
                            </div>
                        {{/if}}
                    </div>
                </div>
            {{/if}}

            {{! Due date alerts }}
            {{#if (or this.boardStats.overdueCount this.boardStats.dueSoonCount)}}
                <div class="stats-section due-alerts">
                    {{#if this.boardStats.overdueCount}}
                        <div class="due-alert overdue">
                            <FaIcon @icon="exclamation-triangle" @prefix="fas" />
                            <span>{{this.boardStats.overdueCount}} overdue</span>
                        </div>
                    {{/if}}
                    {{#if this.boardStats.dueSoonCount}}
                        <div class="due-alert due-soon">
                            <FaIcon @icon="clock" @prefix="fas" />
                            <span>{{this.boardStats.dueSoonCount}} due soon</span>
                        </div>
                    {{/if}}
                </div>
            {{/if}}

            {{! WIP limit status }}
            {{#if this.wipLimitStats.columnsWithLimits}}
                <div class="stats-section wip-stats">
                    <span class="stats-section-label">WIP Limits:</span>
                    <div class="wip-status">
                        {{#if this.wipLimitStats.columnsOverLimit}}
                            <div class="wip-alert over-limit">
                                <FaIcon @icon="ban" @prefix="fas" />
                                <span>{{this.wipLimitStats.columnsOverLimit}} over limit</span>
                            </div>
                        {{/if}}
                        {{#if this.wipLimitStats.columnsAtLimit}}
                            <div class="wip-alert at-limit">
                                <FaIcon @icon="equals" @prefix="fas" />
                                <span>{{this.wipLimitStats.columnsAtLimit}} at limit</span>
                            </div>
                        {{/if}}
                        {{#unless this.wipLimitStats.hasWipIssues}}
                            <div class="wip-status-good">
                                <FaIcon @icon="check" @prefix="fas" />
                                <span>All within limits</span>
                            </div>
                        {{/unless}}
                    </div>
                </div>
            {{/if}}
        </div>

        {{! Action buttons }}
        <div class="board-footer-actions">
            {{! Export options }}
            <div class="action-group">
                <Button
                    @type="ghost"
                    @size="sm"
                    @icon="download"
                    @text="Export"
                    @onClick={{fn this.onExport "json"}}
                    @helpText="Export board data"
                />
                
                <Button
                    @type="ghost"
                    @size="sm"
                    @icon="print"
                    @onClick={{this.onPrint}}
                    @helpText="Print board"
                />
            </div>

            {{! Utility actions }}
            <div class="action-group">
                <Button
                    @type="ghost"
                    @size="sm"
                    @icon="sync-alt"
                    @onClick={{this.onRefresh}}
                    @helpText="Refresh board"
                />
                
                <Button
                    @type="ghost"
                    @size="sm"
                    @icon="cog"
                    @onClick={{this.onSettings}}
                    @helpText="Board settings"
                />
            </div>
        </div>
    </div>

    {{! Performance metrics (if available) }}
    {{#if this.performanceMetrics.throughput}}
        <div class="performance-metrics">
            <div class="metrics-section">
                <h4 class="metrics-title">Performance</h4>
                <div class="metrics-grid">
                    <div class="metric-item">
                        <span class="metric-label">Throughput:</span>
                        <span class="metric-value">{{this.performanceMetrics.throughput}} cards/week</span>
                    </div>
                    
                    {{#if this.performanceMetrics.averageCycleTime}}
                        <div class="metric-item">
                            <span class="metric-label">Cycle Time:</span>
                            <span class="metric-value">{{this.formatDuration this.performanceMetrics.averageCycleTime}}</span>
                        </div>
                    {{/if}}
                    
                    {{#if this.performanceMetrics.averageLeadTime}}
                        <div class="metric-item">
                            <span class="metric-label">Lead Time:</span>
                            <span class="metric-value">{{this.formatDuration this.performanceMetrics.averageLeadTime}}</span>
                        </div>
                    {{/if}}
                </div>
            </div>
        </div>
    {{/if}}

    {{! Keyboard shortcuts reminder }}
    <div class="keyboard-shortcuts-hint">
        <Button
            @type="link"
            @size="xs"
            @text="Keyboard shortcuts"
            @onClick={{this.showKeyboardShortcuts}}
            @helpText="View available keyboard shortcuts"
        />
    </div>
</div>
