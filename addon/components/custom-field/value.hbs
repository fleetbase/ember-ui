<div class="field-info-container {{if @customField.meta.colSpan (concat 'col-span-' @customField.meta.colSpan) ''}}">
    <div class="field-name">{{@customField.label}}</div>
    <div class="field-value">
        {{#if this.isBoolean}}
            <Badge @status={{if this.value "success" ""}}>{{if this.value "Yes" "No"}}</Badge>
        {{else if this.isFile}}
            <File @file={{this.value}} @onDownload={{this.downloadFile}} class="custom-field-file" />
        {{else}}
            {{n-a this.value}}
        {{/if}}
    </div>
</div>