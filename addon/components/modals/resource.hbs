<Modal::Default @modalIsOpened={{@modalIsOpened}} @options={{@options}} @confirm={{@onConfirm}} @decline={{@onDecline}} ...attributes>
    <div class="modal-body-container pt-0i {{@options.wrapperClass}}">
        {{#let (or @options.render @options.component) as |render|}}
            {{#if render}}
                {{component render resource=@options.resource}}
            {{/if}}
        {{/let}}
    </div>
</Modal::Default>